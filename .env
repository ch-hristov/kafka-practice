# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=car_parts_new
KAFKA_GROUP_ID=demo_group

# Topic Configuration (for recreate_topic.sh)
KAFKA_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1

# User Activities Topic Configuration
KAFKA_ACTIVITIES_TOPIC=user-activities
KAFKA_ACTIVITIES_PARTITIONS=6
KAFKA_RETENTION_MS=604800000    

# Activity Producer Configuration
EVENTS_PER_SECOND=10
VERBOSE=false

# Analytics Processor Configuration
KAFKA_ANALYTICS_GROUP=analytics-processors
STATS_INTERVAL=50

# Fraud Detector Configuration
KAFKA_FRAUD_GROUP=fraud-detectors
HIGH_VALUE_THRESHOLD=500.0
VELOCITY_THRESHOLD=5
RAPID_LOCATION_CHANGE_MINUTES=10
MULTIPLE_IP_THRESHOLD=3
